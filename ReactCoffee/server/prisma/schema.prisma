generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Coffee {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  image     String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  orders    OrderItem[]
}

model Order {
  id         Int          @id @default(autoincrement())
  customer   String
  totalPrice Float
  createdAt  DateTime     @default(now())
  items      OrderItem[]
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  coffeeId Int
  orderId  Int
  quantity Int

  coffee   Coffee  @relation(fields: [coffeeId], references: [id])
  order    Order   @relation(fields: [orderId], references: [id])
}
